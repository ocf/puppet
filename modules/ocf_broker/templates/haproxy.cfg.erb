global
  daemon
  log localhost local0
  maxconn 4000
  pidfile /var/run/haproxy.pid
  user haproxy
  group sys
  chroot /var/lib/haproxy
  tune.ssl.default-dh-param 2048

defaults
  timeout connect 10s
  timeout client 30s
  timeout server 30s
  option tcplog
  log global
  retries 3

frontend redis
  bind 0.0.0.0:6378 ssl crt /etc/ssl/private/<%= @fqdn %>.pem
  mode tcp

  default_backend redis_backend

backend redis_backend
  mode tcp
  server redis-no-ssl 127.0.0.1:6379
