vrrp_instance VI_1 {
    interface <%= @networking['primary'] %>
    state MASTER
    virtual_router_id 52
    priority 100

    authentication {
        auth_type PASS
        auth_pass $ <%= @keepalived_secret %>
    }

    virtual_ipaddress {
        <% @virtual_addresses.each do |ip| %>
            <%= ip %>
        <% end %>
    }

    virtual_ipaddress_excluded {
        <% @virtual_addresses_v6.each do |ip| %>
            <%= ip %>
        <% end %>
    }
}
