auto bond0
auto <%= @logical_primary_interface %>

iface bond0 inet manual
  slaves <%= @ifaces_linked %>
  bond-mode 802.3ad
  bond-miimon 100

iface <%= @logical_primary_interface %> inet static
  vlan-raw-device bond0
  address <%= @ipaddress %>
  netmask <%= @netmask %>
  gateway <%= @gateway %>

iface <%= @logical_primary_interface %> inet6 static
  vlan-raw-device bond0
  address <%= @ipaddress6 %>
  netmask <%= @netmask6 %>
  gateway <%= @gateway6 %>
