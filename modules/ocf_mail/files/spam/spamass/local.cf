###########################################################################

required_score 2.5
report_safe 0

# show scores of tests in headers
add_header all Status _YESNO_, score=_SCORE_ required=_REQD_ tests=_TESTSSCORES_ autolearn=_AUTOLEARN_ version=_VERSION_

