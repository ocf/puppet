[Unit]
Description=OCF Load Balancer
After=docker.service
Wants=docker.service

[Service]
ExecStart=/usr/bin/docker run --rm -e PORTS=9090 --net=host mesosphere/marathon-lb sse -m http://localhost:8080 --group lb --dont-bind-http-https
Restart=always
RestartSec=15

[Install]
WantedBy=multi-user.target
