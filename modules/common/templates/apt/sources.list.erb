<% if @operatingsystem == 'Debian' -%>
<% if @architecture == 'amd64' or @architecture == 'i386' -%>
deb http://mirrors/debian/ <%= @lsbdistcodename %> main<% if @nonfree %> contrib non-free<% end %>
deb http://mirrors/debian/ <%= @lsbdistcodename %>-updates main<% if @nonfree %> contrib non-free<% end %>
deb http://security.debian.org/ <%= @lsbdistcodename %>/updates main<% if @nonfree %> contrib non-free<% end %>
deb http://mirrors/debian/ <%= @lsbdistcodename %>-backports main<% if @nonfree %> contrib non-free<% end %>
<% elsif @architecture == 'armv6l' -%>
deb http://archive.raspbian.org/raspbian/ <%= @lsbdistcodename %> main rpi
deb http://archive.raspberrypi.org/debian/ <%= @lsbdistcodename %> main
<% else -%>
deb http://mirrors.kernel.org/debian/ <%= @lsbdistcodename %> main<% if @nonfree %> contrib non-free<% end %>
deb http://mirrors.kernel.org/debian/ <%= @lsbdistcodename %>-updates main<% if @nonfree %> contrib non-free<% end %>
deb http://security.debian.org/ <%= @lsbdistcodename %>/updates main<% if @nonfree %> contrib non-free<% end %>
<% end -%>
<% if @kiosk -%>
deb http://debian.webconverger.com/ squeeze/
<% end -%>
<% elsif @operatingsystem == 'Ubuntu' -%>
deb http://mirrors.kernel.org/ubuntu/ <%= @lsbdistcodename %> main restricted universe multiverse
deb http://mirrors.kernel.org/ubuntu/ <%= @lsbdistcodename %>-updates main restricted universe multiverse
deb http://mirrors.kernel.org/ubuntu/ <%= @lsbdistcodename %>-backports main restricted universe multiverse
deb http://security.ubuntu.com/ubuntu/ <%= @lsbdistcodename %>-security main restricted universe multiverse
<% end -%>
