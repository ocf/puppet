admins = { "root@ocf.berkeley.edu" }

use_libevent = true

modules_enabled = {
    "admin_adhoc";
    "blocklist";
    "carbons";
    "cloud_notify";
    "csi";
    "csi_battery_saver";
    "dialback";
    "disco";
    "mam";
    "pep";
    "ping";
    "posix";
    "register";
    "roster";
    "saslauth";
    "smacks";
    "time";
    "tls";
    "uptime";
    "vcard";
    "version";
}

-- mam: never expire archived messages
archive_expires_after = "never"

-- We may want to change this later, dpeending on how self-service account
-- registration ends up working
allow_registration = false

daemonize = true

ssl = {
    options = {
        "no_sslv2",
        "no_sslv3",
        "no_ticket",
        "no_compression",
        "cipher_server_preference",
        "single_dh_use",
        "single_ecdh_use",
    };
    ciphers = "DH+AES:ECDH+AES:+ECDH+SHA:AES:!PSK:!SRP:!DSS:!ADH:!AECDH";
    curve = "secp521r1";
    key = "/etc/ssl/private/<%= @fqdn -%>.key";
    certificate = "/etc/ssl/private/<%= @fqdn -%>.bundle";
}

c2s_require_encryption = true
s2s_require_encryption = true
s2s_secure_auth = true

pidfile = "/var/run/prosody/prosody.pid"

-- Store hashed passwords in database instead of plaintext
authentication = "internal_hashed"

storage = "sql"

sql = {
    driver = "MySQL",
    database = "prosody",
    username = "prosody",
    password = "<%= @mysql_password %>",
    host = "mysql",
}

log = {
    info = "/var/log/prosody/prosody.log";
    error = "/var/log/prosody/prosody.err";
    "*syslog";
}

VirtualHost "<%= @vhost_name %>"
  enabled = true

Component "<%= @irc_server %>"
  component_secret = "<%= @component_password %>"

Include "conf.d/*.cfg.lua"
